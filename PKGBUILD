# Maintainer: Lawrence Thorpe <lawrence at lawrencethorpe.uk>
pkgname=arch-backup
pkgver=0.0.1
pkgrel=1
pkgdesc="Automatic system backups using restic"
arch=('any')
url="https://github.com/thorpelawrence/arch-backup"
license=('AGPL')
depends=('restic')
backup=()
source=("$pkgname-$pkgver::git+$url.git?signed#branch=main")
noextract=()
sha512sums=('SKIP')
validpgpkeys=('DC78FFA471A243A8A629D54B2A0C2FB492F5FA27')

prepare() {
	cd "$pkgname-$pkgver"
}

build() {
	cd "$pkgname-$pkgver"
}

check() {
	cd "$pkgname-$pkgver"
}

package() {
	cd "$pkgname-$pkgver"
}
